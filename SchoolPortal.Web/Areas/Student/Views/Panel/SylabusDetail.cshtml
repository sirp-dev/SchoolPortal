@model SchoolPortal.Web.Models.Entities.Syllable

@{
    ViewBag.Title = "SylabusDetail";
}


<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="box box-default">
            <div class="box-header with-border">

                <h3 class="box-title">Syllable Details</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-5">
                        <div class="table-responsive">
                            <table class="table table-success table-bordered" style="background-color:#3c8dbc; color:#ffffff;">
                                <tr>
                                    <th>Class</th>
                                    <td>@Model.Title</td>
                                </tr>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">

                <div class="container-fluid">
                    <h3>Details</h3>
                    <div class="" style="max-height:200px;overflow:scroll;">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>

        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->


    <div class="col-md-1"></div>

</div>
