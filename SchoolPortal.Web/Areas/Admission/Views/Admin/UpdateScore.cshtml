@model SchoolPortal.Web.Models.Entities.StudentData

@{
    ViewBag.Title = "UpdateScore";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Admission Details</h3>
            </div>
            @using (Html.BeginForm())
            {
                @*@Html.AntiForgeryToken()*@

                <div class="box-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.RegistrationNumber)
                    @Html.HiddenFor(model => model.Surname)
                    @Html.HiddenFor(model => model.FirstName)
                    @Html.HiddenFor(model => model.OtherNames)
                    @Html.HiddenFor(model => model.DateOfBirth)
                    @Html.HiddenFor(model => model.LastPrimarySchoolAttended)
                    @Html.HiddenFor(model => model.Religion)
                    @Html.HiddenFor(model => model.NameOfParents)
                    @Html.HiddenFor(model => model.ParentsAddress)
                    @Html.HiddenFor(model => model.PhoneNumberOfParents)
                    @Html.HiddenFor(model => model.OccupationOfParents)
                    @Html.HiddenFor(model => model.PermanentHomeAddress)
                    @Html.HiddenFor(model => model.LocalGov)
                    @Html.HiddenFor(model => model.StateOfOrigin)
                    @Html.HiddenFor(model => model.Nationality)
                    @Html.HiddenFor(model => model.ExamCenter)
                    @Html.HiddenFor(model => model.Disability)
                    @Html.HiddenFor(model => model.EmergencyContact)
                    @Html.HiddenFor(model => model.AdmissionNumber)
                    @Html.HiddenFor(model => model.ApplicationDate)
                    @Html.HiddenFor(model => model.Status)
                    @Html.HiddenFor(model => model.DateOfAdmission)
                    @Html.HiddenFor(model => model.AdmissionOfficer)
              
                    <div class="form-group">
                        @Html.LabelFor(model => model.ExamScore, htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.ExamScore, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ExamScore, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
                </div>

            }
        </div>

    </div>
    <div class="col-md-3"></div>

</div>

@section Scripts {
    
}
