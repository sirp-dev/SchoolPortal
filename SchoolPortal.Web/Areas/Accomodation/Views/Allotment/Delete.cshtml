@model SchoolPortal.Web.Models.Entities.HostelAllotment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header with-border">
                <i class="fa fa-warning"></i>

                <h3 class="box-title">Delete Hostel Allotment </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <h2>Delete</h2>

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Hostel Allotment</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Student Name
                        </dt>

                        <dd>
                            @Html.DisplayNameFor(model => model.User.Surname) @Html.DisplayNameFor(model => model.User.FirstName) @Html.DisplayNameFor(model => model.User.OtherName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Hostel.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Hostel.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HostelRoom.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HostelRoom.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HostelBed.BedNo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HostelBed.BedNo)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @*@Html.AntiForgeryToken()*@

                        <div class="form-actions no-color btn-delete">
                            <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;
                            <a href="javascript: history.back()" class="btn btn-default">Cancel</a>

                        </div>
                    }
                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->


    <div class="col-md-3"></div>

</div>

@using SchoolPortal.Web.Areas.Service
