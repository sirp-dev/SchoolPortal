@model SchoolPortal.Web.Models.Entities.Post

@{
    ViewBag.Title = "Details";
}




<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header with-border">

                <h3 class="box-title">Post Details</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Content)
                    </dt>

                    <dd>
                        @Html.Raw(Model.Content)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DatePosted)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DatePosted)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Status)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.PostedBy)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PostedBy)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.SortOrder)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SortOrder)
                    </dd>

                    <dt>
                        image
                    </dt>

                    <dd>
                        @foreach (var image in Model.PostImages)
                        {
                            <img src="data:image/jpg;base64,@(Convert.ToBase64String(image.ImageContent))" height="100" />
                        }
                    </dd>

                </dl>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->


    <div class="col-md-3"></div>

</div>
