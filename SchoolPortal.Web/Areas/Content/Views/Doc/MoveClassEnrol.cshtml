@using SchoolPortal.Web.Areas.Service
@{
    ViewBag.Title = "Enroll";
}




<div class="row">
    <!-- left column -->
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Enroll @GeneralService.StudentorPupil()</h3>
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["error"]
                    </div>
                }
                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["success"]
                    </div>
                }
            </div>
            <div class="alert bg-danger" style="background-color:#ec121c;color:#ffffff;">
                @if (User.IsInRole("SuperAdmin"))
                {
                    <h2 style="border-bottom:1px dotted #ffffff;" class="page-header">MOVE @GeneralService.StudentorPupil().ToUpper()<span>S</span> TO ANOTHER CLASS</h2>

                    <p> Please Make sure you are not in the term where the @GeneralService.StudentorPupil()<span>s</span> has result previously. Move to the next term if the student has result in the current term that has been published already please.</p><br />
                }

            </div>
            @using (Html.BeginForm("MoveClassEnrol", "Doc", new { id = ViewBag.id }, FormMethod.Post))
            {
                @*@Html.AntiForgeryToken()*@

                <div class="box-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Class Name
                        <div class="">
                            @Html.DropDownList("ClassLevelId", ViewBag.ClassLevelId as SelectList, "CHOOSE A CLASS", htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Enroll @GeneralService.StudentorPupil()</button>
                    <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
                </div>

            }
        </div>

    </div>
    <div class="col-md-3"></div>

</div>



