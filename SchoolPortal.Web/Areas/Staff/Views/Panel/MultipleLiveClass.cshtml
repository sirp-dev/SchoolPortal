                        </div>
                    </div>
                </div>
            </div>

            <div class="box box-solid">
                <div class="box-header">
                    <h3 class="box-title bg-info">Third Concurrent Class</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn bg-danger btn-sm" data-widget="collapse">
                            <i class="fa fa-square"></i> minimize
                        </button>

                    </div>
                </div>
                <div class="box-body">


                    <div class="form-group">
                        Class
                        <div class="">
                            @Html.DropDownList("ClassLevelId3", ViewBag.classList as SelectList, "Select a Class", new { id = "classname3", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        Subject
