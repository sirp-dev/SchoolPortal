                <div class="box-body border-radius-none">

                    <div class="form-group">
                        <label>Class Date</label>

                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control pull-right" placeholder="DD/MM/YYYY" name="ClassDate" id="datepicker">
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="bootstrap-timepicker">
                        <div class="form-group">
                            <label>Class Time</label>

                            <div class="input-group">
                                <input type="text" name="ClassTime" class="form-control timepicker">

                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                    </div>
                </div>
                <!-- /.box-body -->
                <!-- /.box-footer -->
            </div>
            <div class="box box-solid">
                <div class="box-header">
                    <h3 class="box-title bg-success">First Concurrent Class</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn bg-danger btn-sm" data-widget="collapse">
                            <i class="fa fa-square"></i> min/max
                        </button>

                    </div>
                </div>
                <div class="box-body">


                    <div class="form-group">
                        Class
                        <div class="">
                            @Html.DropDownList("ClassLevelId1", ViewBag.classList as SelectList, "Select a Class", new { id = "classname1", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        Subject
                        <div class="">

                            <select id="subject1" name="SubjectId1" class="form-control"></select>
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.Label("Class Duration", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.Editor("Duration1", new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "IN MINUTE" } })
                        </div>
                    </div>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <div class="form-group">
                            Class
                            <div class="">
                                @Html.DropDownList("UserId1", ViewBag.User as SelectList, "Select a Teacher", new { id = "classname", @class = "form-control" })
                            </div>
                        </div>
                    }
                    else
                    {
                        string uid = User.Identity.GetUserId();
                        <input type="hidden" value="@uid" name="UserId1" />
                    }
                    <div class="form-group">
                        @Html.Label("Topic Description", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            <textarea class="form-control" name="Description1"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Class Password", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.Editor("ClassPassword1", new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                        </div>
                    </div>
                </div>
            </div>

            <div class="box box-solid">
                <div class="box-header">
                    <h3 class="box-title bg-primary">Second Concurrent Class</h3>
