                            @Html.Editor("Duration3", new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "IN MINUTE" } })
                        </div>
                    </div>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <div class="form-group">
                            Class
                            <div class="">
                                @Html.DropDownList("UserId3", ViewBag.User as SelectList, "Select a Teacher", new { id = "classname", @class = "form-control" })
