@model SchoolPortal.Web.Models.Entities.EnrolledSubject

@{
    ViewBag.Title = "AddSort";
}

<h2>AddSort</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Model.Enrollments.StudentProfile.user.Surname @Model.Enrollments.StudentProfile.user.FirstName @Model.Enrollments.StudentProfile.user.OtherName
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subject.SubjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SortOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SortOrder)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @*@Html.AntiForgeryToken()*@

        <div class="box-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                @Html.Label("Subject Name", htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.Editor("SortOrder", new { htmlAttributes = new { @class = "form-control", type="number" } })
                </div>
            </div>

        </div>

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
        </div>

    }

</div>

