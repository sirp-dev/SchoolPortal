@model PagedList.IPagedList<SchoolPortal.Web.Models.Entities.PinCodeModel>
@using PagedList.Mvc;
@using SchoolPortal.Web.Areas.Service
<link href="http://v1.exwhyzee.ng/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Card Batch Delete";
    int n = 0;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">

                <h3 class="box-title" style="text-transform:uppercase;"><i class="fa fa-fw fa-id-card"></i> Card Batch Delete</h3>
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["error"]
                    </div>
                }
                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["msg"]
                    </div>
                }
            </div>
            <div class="box-body">

                <div class="">

                    @using (Html.BeginForm("DeleteCard", "ImportFromExcel", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        if (TempData["error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                                @TempData["error"]
                            </div>
                        }

                        <div class="form-group">
                            @Html.Label("Batch Number", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                <input name="batchnumber" type="text" placeholder="Enter Batch Number" class="form-control" />
                            </div>
                        </div>
                        <input type="submit" value="Delete Cards" class="btn btn-sm btn-primary" style="width:100%;" />

                    }

                </div>

            </div>

        </div>


    </div>

    <div class="col-xs-2"></div>
</div>
<!-- /.box -->
