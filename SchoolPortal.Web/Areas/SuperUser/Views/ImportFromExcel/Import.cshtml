
@{
    ViewBag.Title = "Import";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Import</h2>

<div class="col-md-5 pull-right">
    <div class="btn-group pull-right">
        <button class="btn btn-primary" id="myButtonControlID">Download Offline Result Sheet</button>

        @using (Html.BeginForm("Import", "ImportFromExcel", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                    @TempData["error"]
                </div>
            }
            <input type="file" class="form-control" name="excelfile" />
            <input type="submit" value="Upload" class="btn btn-sm btn-primary" />

        }

    </div>

</div>
