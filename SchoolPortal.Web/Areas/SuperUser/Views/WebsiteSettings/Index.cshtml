@model IEnumerable<SchoolPortal.Web.Models.Entities.WebsiteSettings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> Slider Management</h3>
                @if (Model.Count() < 1)
                {
                    <div class="box-tools">
                        @Html.ActionLink("New Settings", "Create", null, new { @class = "btn btn-primary", style = "padding: 7px;" })
                    </div>
                }
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

                    <thead>
                        <tr>
                            <th>
                               Color
                            </th>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.Layout)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td style="color:#ffffff !important;">
                                @if (item.Layout == 1)
                                {
                                    <span style="height:20px;width:50px;background-color:#5eafcf;padding:10px 30px;">Color1</span>
                                    <span style="height:20px;width:50px;background-color:#f2184f;padding:10px 30px;">Color2</span>
                                }
                                else if (item.Layout == 2)
                                {
                                    <span style="height:20px;width:50px;background-color:#ffa500;padding:10px 30px;">Color1</span>
                                    <span style="height:20px;width:50px;background-color:#ffa500;padding:10px 30px;">Color2</span>
                                }
                                else if (item.Layout == 3)
                                {
                                    <span style="height:20px;width:50px;background-color:#c58208;padding:10px 30px;">Color1</span>
                                    <span style="height:20px;width:50px;background-color:#c58208;padding:10px 30px;">Color2</span>
                                }
                                else if (item.Layout == 4)
                                {
                                    <span style="height:20px;width:50px;background-color:#263247;padding:10px 30px;">Color1</span>
                                    <span style="height:20px;width:50px;background-color:#263247;padding:10px 30px;">Color2</span>
                                }
                            </td>
                          
                            <td>
                                @Html.DisplayFor(modelItem => item.Layout)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @* @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                        </tr>
                        }
                    </tbody>



                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
