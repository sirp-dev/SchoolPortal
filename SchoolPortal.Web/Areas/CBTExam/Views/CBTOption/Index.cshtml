@model IEnumerable<SchoolPortal.Web.Models.Entities.OptionModel>
@using SchoolPortal.Web.Areas.Service
@using SchoolPortal.Web.Models.Entities
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> Option Bank</h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="example1" class="table table-bordered table-hover" border="1">
                    <thead>
                        <tr>
                            <th>S/No</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsAnswer)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SchoolLink)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int sno = 0;
                        }
                        @if (ViewBag.data != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>

                                    <td>
                                        @Html.Raw(item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsAnswer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SchoolLink)
                                    </td>

                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                                Action
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">

                                                <li><a class="text-color-warning" href="http://@GeneralService.PortalLink()/CBTExam/CBTOption/Edit?id=@item.Id&unixconverify=@User.Identity.Name&xgink=@GeneralService.PortalLink()&role=superadmin"><i class="fa fa-edit"></i> Edit  </a></li>
                                                <li><a class="text-color-primary" href="http://@GeneralService.PortalLink()/CBTExam/CBTOption/Details?id=@item.Id&unixconverify=@User.Identity.Name&xgink=@GeneralService.PortalLink()&role=superadmin"><i class="fa fa-eye"></i> Details </a></li>
                                                <li><a class="text-color-danger" href="http://@GeneralService.PortalLink()/CBTExam/CBTOption/Delete?id=@item.Id&unixconverify=@User.Identity.Name&xgink=@GeneralService.PortalLink()&role=superadmin"><i class="fa fa-minus"></i> Delete  </a></li>

                                            </ul>
                                        </div>

                                    </td>

                                </tr>


                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" style="text-align:center;">No Data Yet!</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>


    @section Style {

        <link rel="stylesheet" href="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">

    }

    @section Scripts {
        <!-- DataTables -->
        <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    }

    @section Scripts2 {
        <script>
            $(function () {
                $('#example1').DataTable()
                $('#example2').DataTable({
                    'paging': true,
                    'lengthChange': false,
                    'searching': false,
                    'ordering': true,
                    'info': true,
                    'autoWidth': false
                })
            })
        </script>
    }

</div>
