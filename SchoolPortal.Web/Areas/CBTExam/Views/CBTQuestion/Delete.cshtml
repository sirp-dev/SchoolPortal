@model SchoolPortal.Web.Models.Entities.QuestionModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header with-border">
                <i class="fa fa-warning"></i>

                <h3 class="box-title">Delete Question</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">

                    <h4>
                        <i class="icon fa fa-ban"></i> Alert! Are you sure you want to delete this?
                    </h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Subject)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Subject)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.Raw(Model.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ExamMode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ExamMode)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SchoolLink)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SchoolLink)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Session)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Session)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Term)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Term)
                        </dd>

                    </dl>
                    @using (Html.BeginForm("Remove", "CBTQuestion", FormMethod.Post, new { role = "form" }))
                    {

                        <input type="hidden" name="xgink" value="@ViewBag.xgink" />
                        <input type="hidden" name="unixconverify" value="@ViewBag.unixconverify" />
                        <input type="hidden" name="role" value="@ViewBag.role" />
                        <input type="hidden" name="id" value="@ViewBag.id" />

                        <div class="form-actions no-color btn-delete">
                            <input type="submit" value="Delete" class="btn btn-default" /> &nbsp;
                            <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
                        </div>
                    }


                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->


    <div class="col-md-3"></div>

</div>


