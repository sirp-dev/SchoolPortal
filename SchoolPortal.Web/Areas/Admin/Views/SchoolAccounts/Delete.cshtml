@model SchoolPortal.Web.Models.Entities.SchoolAccount

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header with-border">
                <i class="fa fa-warning"></i>

                <h3 class="box-title">Delete School Account</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">

                    <h4>
                        <i class="icon fa fa-ban"></i> Alert! Are you sure you want to delete this?
                    </h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.AcctName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AcctName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.AcctNumber)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AcctNumber)
                        </dd>

                    </dl>
                    @using (Html.BeginForm())
                    {
                        @*@Html.AntiForgeryToken()*@

                        <div class="form-actions no-color btn-delete">
                            <input type="submit" value="Delete" class="btn btn-default" /> &nbsp;
                            <a href="javascript: history.back()" class="btn btn-default">Cancel</a>

                        </div>
                    }


                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->


    <div class="col-md-3"></div>

</div>