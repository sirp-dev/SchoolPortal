@model IEnumerable<SchoolPortal.Web.Models.Entities.Ticket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}





<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> My Complain Ticket @Html.ActionLink("New Complain", "Create", "Tickets", null, new { @class = "btn btn-primary btn-sm" }) </h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="example1" class="table table-bordered table-hover" border="1">

                    <thead style="" class="bg-primary">
                        <tr>
                            <th>
                                Section
                            </th>
                            <th>
                                Complain
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Priority)
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Last Updated
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        @foreach (var item in Model)
                        {
                        
                            <tr>
                                 <td>
                                    
                                         @Html.DisplayFor(modelItem => item.Title)
                                         
</td>
                                 <td>
                                     <a href="@Url.Action("Details", "Tickets", new { id = item.Id })">
                                         @Html.DisplayFor(modelItem => item.Complain)
                                     </a>
                                 </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Priority)
                                    </td>
                                    <td>
                                        @if (item.Closed == true)
                                        {
                                            <span class="label label-danger" style="padding:3px;">Closed</span>
                                        }
                                        else
                                        {

                                            <span class="label label-default" style="padding:3px;">Active</span>

                                        }

                                    </td>
                                    <td>
                                        @if (item.Responses != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.Responses.OrderByDescending(x => x.Date).FirstOrDefault().Date)

                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.Date)

                                        }
                                    </td>
</tr>
                        
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>




@section Style {

    <link rel="stylesheet" href="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

}

@section Scripts2 {
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}

