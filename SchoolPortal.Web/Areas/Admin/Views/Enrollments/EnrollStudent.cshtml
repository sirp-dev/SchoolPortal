@using SchoolPortal.Web.Areas.Service
@{
    ViewBag.Title = "Enroll";
}




<div class="row">
    <!-- left column -->
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Enroll @GeneralService.StudentorPupil()</h3>

            </div>
            @using (Html.BeginForm("EnrollStudent", "Enrollments", new { id = ViewBag.id }, FormMethod.Post))
            {
                @*@Html.AntiForgeryToken()*@

                <div class="box-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Class Name
                        <div class="">
                            @Html.DropDownList("ClassLevelId", ViewBag.ClassLevelId as SelectList, "CHOOSE A CLASS", htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Enroll @GeneralService.StudentorPupil()</button>
                    <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
                </div>

            }
        </div>

    </div>
    <div class="col-md-3"></div>

</div>



