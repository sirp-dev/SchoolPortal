@model IEnumerable<SchoolPortal.Web.Models.Entities.StudentProfile>
@using SchoolPortal.Web.Areas.Service;
@{
    ViewBag.Title = "FetchUserandTermlyResult";
}



<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i>  Management</h3>
                @Model.Count() total
              
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="exampe1" class="table table-bordered table-hover" border="1">

                    <thead>
                        <tr>
                            <th>S/n</th>
                            <th>Date</th>
                            <th>
                               Profile Id
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.StudentRegNumber)
                            </th>
                            <th>name</th>
                            <th>username</th>
                            <th>session result</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 0;
                        }
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @sno
                            </td>
                            <td>@item.user.DateRegistered</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.StudentRegNumber)
                            </td>
                            <td>@item.user.Surname @item.user.FirstName @item.user.OtherName</td>
                            <td>@item.user.UserName</td>
                            <td>@Html.Raw(GeneralService.ResultBySessionTerm(item.Id))</td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>




