            </div>
            <div class="box-body">
                

                <br />
                <div class="box-body table-responsive no-padding">
                    <table id="example" class="table table-bordered table-hover" border="1">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>
                                    class
                                </th>
                                <th>
                                    session
                                </th>
                                <th>
                                    name
                                </th>
                                <th>
                                    Reg number
                                </th>
                                <th>
                                    Average
                                </th>
                                <th>
                                   Cummulative AverageScore
                                </th>
                              
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassLevel.ClassName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Session.Term) @Html.DisplayFor(modelItem => item.Session.SessionYear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StudentProfile.user.Surname)  @Html.DisplayFor(modelItem => item.StudentProfile.user.FirstName)  @Html.DisplayFor(modelItem => item.StudentProfile.user.OtherName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StudentProfile.StudentRegNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AverageScore)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CummulativeAverageScore)
                                </td>
                               
                                <td>
                                    @Html.ActionLink("Edit", "EditEnrollment", new { id = item.Id }, new { @class = "btn btn-danger" }) 
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) 
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-info" })
                                </td>
                            </tr>
                            }

                    </tbody>

                    </table>

                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>



