@model PagedList.IPagedList<SchoolPortal.Web.Models.Entities.Enrollment>

@{
    ViewBag.Title = "IndexEnrol";
}


<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-header">
                Enrollment
                @*@using (Html.BeginForm("IndexEnrol", "Enrollments", null, FormMethod.Post, new { @class = "" }))
        {

            <div class="input-group" style="margin-left:10px;">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-primary">Search</button>
