@model SchoolPortal.Web.Models.Entities.Grading

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <!-- left column -->

    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Grade Details</h3>
                @if (TempData["error"] != null)
            {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["error"]
                    </div>
                }
              

            </div>


            <div class="row">
                <div class="col-md-5">
                    <div class="box-body table-responsive">
                        <table class="table table-success table-bordered" style="background-color:#3c8dbc; color:#ffffff;">
                            <tr>
                                <th>Name</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>@Model.Description</td>
                            </tr>
                          

                        </table>
                    </div>
                </div>
            </div>

            <div class="box-body">
                <div class="btn-group pull-right">
                    @Html.ActionLink("New Grading", "AddGrade", new { gradeId = Model.Id }, new { @class = "btn btn-primary" })
                 
                    @Html.ActionLink("Back To Grade List", "Index", null, new { @class = "btn btn-primary" })

                </div>

            </div>

            <!-- /.box-body -->

            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3 class="box-title">Subjects</h3>


                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>

                                       Grade
                                    </th>
                                    <th>
                                        Remark
                                    </th>
                                    <th>
                                        Upper and Lower Limit
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model.GradingDetails)
                                {
                                    <tr>
                                        <td>
                                            @item.Grade
                                        </td>
                                        <td>
                                            @item.Remark
                                        </td>
                                        <td>
                                            @item.UpperLimit <text>&</text> @item.LowerLimit
                                        </td>

                                        <td>

                                            <div class="btn-group pull-right">

                                                @Html.ActionLink("Edit", "EditGrade", new { id = item.Id }, new { @class = "btn btn-primary" })

                                                @Html.ActionLink("Delete", "DeleteGradeDetail", new { id = item.Id }, new { @class = "btn btn-danger" })

                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </div>
    </div>
</div>

