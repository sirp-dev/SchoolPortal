@model IEnumerable<SchoolPortal.Web.Models.Entities.Grading>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> Grade Management</h3>

                <div class="box-tools">
                    @Html.ActionLink("New Grade", "Create", null, new { @class = "btn btn-primary", style = "padding: 7px;" })
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>

                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Action
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">

                                        <li class="text-color-success">@Html.ActionLink("Details", "Details", new { id = item.Id }, null)</li>

                                        <li class="text-color-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id }, null)</li>

                                    </ul>
                                </div>

                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> Nested View</h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
             
                       

@foreach (var item in Model)
{
    <ul>
       
        <li>
            @Html.DisplayFor(modelItem => item.Name)
            <ul>
                @foreach(var g in item.GradingDetails)
                {
                    <li>
                        @g.Grade (@g.Remark) (@g.UpperLimit <text>&</text> @g.LowerLimit)
                    </li>
                }
               
            </ul>
        </li>
        
    </ul>
   
}

               
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
