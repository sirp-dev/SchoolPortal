@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> Role Management</h3>
                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="box-tools">
                        @Html.ActionLink("New Role", "CreateRole", null, new { @class = "btn btn-primary", style = "padding: 7px;" })
                    </div>
                }
                </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <th>

                            </th>
                        }
                        </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Action
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">

                                        <li class="text-color-warning">@Html.ActionLink("Edit", "EditRole", new { id = item.Id }, null)</li>

                                        <li class="text-color-danger">@Html.ActionLink("Delete", "DeleteRole", new { id = item.Id }, null)</li>

                                    </ul>
                                </div>

                            </td>
                        }
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>