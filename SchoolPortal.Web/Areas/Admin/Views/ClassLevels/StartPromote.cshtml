<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-12 col-xs-12">

        <h5 style="font-weight:900;">@GeneralService.StudentorPupil()<span>s</span> Statistic</h5>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@ViewBag.EnrolledStudents</h3>

                <p>Ready for Promotion</p>
            </div>
            <div class="icon">
                <i class="fa fa-graduation-cap"></i>
            </div>
            <a href="@Url.Action("EnrolledStudents", "Enrollments", new { area="Admin"})" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@ViewBag.Staff</h3>

                <p>Staff</p>
            </div>
            <div class="icon">
                <i class="fa fa-user"></i>
            </div>
            <a href="@Url.Action("Staff", "UserManagers", new { area="Admin"})" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        @if (ViewBag.batchstatus == "TRUE")
        {
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3 style="text-wrap:normal;">@ViewBag.avelableresult  </h3>

                    <p>Results <strong>(current term)</strong></p>
                </div>
                <div class="icon">
                    <i class="fa fa-eraser"></i>
                </div>
                <a href="@Url.Action("Results", "ResultManagement", new { area = "Admin" })" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        }
        else
        {
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3 style="text-wrap:normal;">@ViewBag.cardavialable <span style="font-size:16px !important;">(@ViewBag.cardusedcurrentterm Used)</span> </h3>

                    <p>Cards <strong>(current term)</strong></p>
                </div>
                <div class="icon">
                    <i class="fa fa-cc-discover"></i>
                </div>
                <a href="@Url.Action("Index", "PinManagement", new { area = "Admin" })" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        }
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h3 style="text-wrap:normal;">@ViewBag.classes <span style="font-size:16px !important;"> @*(@ViewBag.classesJss JSS) (@ViewBag.classesSss SSS)*@ </span></h3>

                <p>Classes</p>

            </div>

            <div class="icon">

                <i class="fa fa-building"></i>

            </div>

            <a href="@Url.Action("Index", "ClassLevels", new { area="Admin"})" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>

        </div>

    </div>
    <!-- ./col -->
</div>

