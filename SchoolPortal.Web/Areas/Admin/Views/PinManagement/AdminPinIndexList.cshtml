@model IEnumerable<SchoolPortal.Web.Models.Entities.PinCodeModel>
    @using SchoolPortal.Web.Areas.Service
    @{
    ViewBag.Title = "Admin Pin Index List";
    }
    @{
    int sno = 0;
    }

    <div class="row">
        <div class="col-xs-12">
            <div class="box panel-primary">

                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-fw fa-lock"></i> Pin Management <i>ALL CARDS</i> (@Model.Count() / @ViewBag.countAll)</h3>

                </div>




                <br />
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table id="example1" class="table table-bordered table-hover" border="1">

                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>
                                    PIN NUMBER
                                </th>
                                <th>
                                    SERIAL NUMBER
                                </th>
                                <th>
                                    USAGE
                                </th>
                                <th>
                                    BATCH
                                </th>

                                <th style="text-transform:uppercase;">
                                    @GeneralService.StudentorPupil() PIN
                                </th>

                                <th>SESSION</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @{ sno++; }
                                    @sno
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PinNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BatchNumber)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.StudentPin)
                                </td>


                                @if (item.SessionId != null)
                                {
                                <td>
                                    @Html.DisplayFor(modelItem => item.Session.SessionYear) / @Html.DisplayFor(modelItem => item.Session.Term)

                                </td>
                                }
                                else
                                {
                                <td></td>
                                }


                                <td>
                                    @Html.ActionLink("Card Info", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Card Edit", "EditPin", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Reset Card by 1", "ResetAdd", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Remove Reset Card by 1", "ResetMinus", new { id = item.Id }, new { @class = "btn btn-primary" })

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>



    @section Style {

    <link rel="stylesheet" href="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    }

    @section Scripts {
    <!-- DataTables -->
    <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    }

    @section Scripts2 {
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
    }
