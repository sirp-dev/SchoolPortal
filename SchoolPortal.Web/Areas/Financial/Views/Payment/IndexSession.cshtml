
@using SchoolPortal.Web.Areas.Service
@{
    ViewBag.Title = "Index";
}


<div class="row">
    <!-- left column -->
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Finance Management By Session</h3>
              
            </div>
            @using (Html.BeginForm("IndexBySession", "Payment", null, FormMethod.Post))
            {
                @*@Html.AntiForgeryToken()*@

                <div class="box-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        Select Session
                        <div class="">
                            @Html.DropDownList("sessionId", ViewBag.sessionId as SelectList, "choose a session", htmlAttributes: new { @class = "form-control", required = "Choose a session" })
                        </div>
                    </div>

                   

                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Continue</button>

                    <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
                </div>

            }
        </div>

    </div>
    <div class="col-md-3"></div>

</div>

@section Scripts {
        @**@
}

