@model SchoolPortal.Web.Models.Entities.Finance
@using SchoolPortal.Web.Areas.Service
@{
    ViewBag.Title = "Payment Information";
}

<section class="content">

    <div class="box box-primary">
        <div class="box-header no-print">
            <h3 class="box-title">Payment Details</h3>

        </div>
        <div class="box-body">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <strong>Name:</strong>
                <p class="text-muted">
                    @Model.User.Surname @Model.User.FirstName @Model.User.OtherName
                </p>
                <hr>

                <strong>Reg Number:</strong>
                <p class="text-muted">
                    @Model.RegistrationNumber
                </p>
                <hr>

                <strong>Payment Title:</strong>
                <p class="text-muted">
                    @Model.Title
                </p>
                <hr>
                @if (Model.InvoiceNumber != null)
                {
                    <strong>Invoice Number:</strong>
                    <p class="text-muted">
                        @Model.InvoiceNumber
                    </p>
                    <hr>
                }
                else
                {

                }
                <strong>Reference Number:</strong>
                <p class="text-muted">
                    @Model.ReferenceId
                </p>
                <hr>
                <strong>Amount:</strong>
                <p class="text-muted">
                    @Model.Amount
                </p>
                <hr>

                <strong>Payment Medium:</strong>
                <p class="text-muted">
                    @Model.FinanceSource
                </p>
                <hr>

                <label>Payment Date:</label>
                @if (Model.Date != null)
                {
                    <p class="text-muted">
                        @Model.Date.ToString("dd-MMM-yyyy hh:mm:tt")
                    </p>

                }
                else
                {

                }
                <hr>
                <strong>Session/Term:</strong>
                <p class="text-muted">
                    @Model.Session.SessionYear/@Model.Session.Term Term
                </p>
                <hr>

                <strong>Payment Status:</strong>
                <p class="text-muted">
                    @Model.TransactionStatus
                </p>
                <hr>

            </div>
            <div class="clearfix"></div>
            <div class="text-center">
                <button onclick="window.print()" style="text-align:center;" class="btn btn-sm btn-primary">Print</button>
            </div>

            <div class="col-md-2"></div>
        </div>
    </div>
</section>

@if (User.IsInRole("SuperAdmin"))
{
    @Html.ActionLink("New Payment", "MixRemove", new { id = Model.Id }, new { @class = "btn btn-primary", style = "padding: 7px;" })


}

