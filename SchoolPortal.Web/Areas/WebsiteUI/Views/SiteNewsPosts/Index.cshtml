@model IEnumerable<SchoolPortal.Web.Models.UI.SiteNewsPost>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3>Site News Post </h3>
            </div>
            <div class="box-body">

                <h2>Index</h2>

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <div class="box-body table-responsive no-padding">
                    <table id="example1" class="table table-bordered table-hover" border="1">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UpperSection)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LowerSection)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpperSection)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LowerSection)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
            </div>
    </div>
</div>
