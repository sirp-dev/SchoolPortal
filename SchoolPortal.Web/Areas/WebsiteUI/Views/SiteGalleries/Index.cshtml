@model IEnumerable<SchoolPortal.Web.Models.UI.SiteGallery>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <div class="box box-primary">

            <div class="box-header">
                <h3>Site Gallery</h3>
            </div>
            <div class="box-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <div class="box-body table-responsive no-padding">
                    <table id="example1" class="table table-bordered table-hover" border="1">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UpperSection)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LowerSection)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Show)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpperSection)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LowerSection)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Show)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
    @section Style {

        <link rel="stylesheet" href="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    }

    @section Scripts {
        <!-- DataTables -->
        <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    }

    @section Scripts2 {
        <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
        </script>
    }
